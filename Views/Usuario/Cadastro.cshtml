@model Usuario

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<h1 class="row justify-content-md-center">Cadastro de Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" placeholder="Digite um login" required/>
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" class="form-control" placeholder="Digite uma senha" required/>
        </div>
        <input type="submit" value="Cadastrar" class="btn btn-primary"/>
    </form>
</div>