@model Usuario

@{
    ViewData["Title"] = "Edição de Usuário";
}

<h1 class="row justify-content-md-center">Edição de Usuário</h1>
<div class="row justify-content-md-center">
    <form asp-action="Editar" method="POST" class="col-md-4">
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input asp-for="Login" class="form-control" value="@Model.Login" required/>
        </div>
        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" class="form-control" value="@Model.Senha" required/>
        </div>
        <input type="submit" value="Atualizar" class="btn btn-primary"/>
    </form>
</div>